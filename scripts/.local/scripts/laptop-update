#!/usr/bin/ansible-playbook --connection=local
# vi: ft=yaml:

# Things this ansible script doesn't configure:
# - Ansible: sudo dnf install ansible -y
# - Sudoers file
# - Red Hat's VPN
# - Finish the tailscale configuration: sudo tailscale up
# - Configure Slack

---
- hosts: localhost
  tasks:
    - name: "Ensure the hostname is setup"
      hostname:
        name: "yuki"
      become: true

    - name: "Add Tailscale repository"
      yum_repository:
        name: tailscale-stable
        description: Tailscale stable
        baseurl: https://pkgs.tailscale.com/stable/fedora/$basearch
        state: present
        gpgcheck: no
      become: true

    - name: "Add 1Password repository"
      yum_repository:
        name: 1password
        description: 1Password Stable Channel
        baseurl: https://downloads.1password.com/linux/rpm/stable/$basearch
        state: present
        gpgcheck: yes
        gpgkey: https://downloads.1password.com/linux/keys/1password.asc
      become: true

    - name: "Upgrade all packages"
      dnf:
        name: "*"
        state: latest
      become: true

    - name: "Install packages"
      dnf:
        name:
          - '@i3 desktop'
          - '@Development tools'
          - '@RPM Development Tools'
          - '@C Development Tools and Libraries'
          - '@Container Management'
          - '@Editors'
          - '@System Tools'
          - git
          - rsync
          - tmux
          - jq
          - golang
          - delve
          - lsof
          - stow
          - gh
          - arandr
          - autorandr
          - neovim
          - fzf
          - npm
          - fedpkg
          - tailscale
          - thunderbird
          - flatpak
          - blueman
          - 1password
          - 1password-cli
          - python3-libselinux
          - sssd
          - krb5-workstation
        state: present
      become: true

    - name: "Add the flathub flatpak repository remote to the user installation"
      flatpak_remote:
        name: flathub
        flatpakrepo_url: https://flathub.org/repo/flathub.flatpakrepo
        state: present
        method: user

    - name: "Install flatpaks from Flathub for the current user only"
      flatpak:
        name:
          - im.riot.Riot
          - org.telegram.desktop
          - org.videolan.VLC
          - com.obsproject.Studio
          - net.ankiweb.Anki
        state: present
        method: user

    - name: "Make sure a service is running"
      systemd:
        state: started
        enabled: yes
        name: tailscaled
      become: true

    - name: "Make NeoVim the only option :P"
      file:
        src: /usr/bin/nvim
        dest: /usr/bin/vim
        state: link
      become: true

    - name: "Make Firefox fit for Kerberos"
      lineinfile:
        dest: /etc/firefox/syspref.js
        line: 'pref("{{ item }}", ".redhat.com");'  # lockPref instead of pref would be also possible
        create: true
      loop:
      - network.negotiate-auth.delegation-uris
      - network.negotiate-auth.trusted-uris
      become: true


