# Documentation -> https://editorconfig.org/
# This tells editors to stop going up
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[*.lua]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2
